{
	"name": "Sink_Scentia_Template_PZ_SOM_DTS",
	"properties": {
		"linkedServiceName": {
			"referenceName": "DataLakePlatform",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"tableName": {
				"type": "string"
			},
			"periodo": {
				"type": "int"
			},
			"archivo": {
				"type": "string"
			}
		},
		"folder": {
			"name": "Argentina/Scentia"
		},
		"annotations": [],
		"type": "Avro",
		"typeProperties": {
			"location": {
				"type": "AzureBlobFSLocation",
				"fileName": {
					"value": "@concat(dataset().archivo,string(formatDateTime(getPastTime(dataset().periodo,'Month'),'yyyyMM')),'.avro')",
					"type": "Expression"
				},
				"folderPath": {
					"value": "@concat('/Argentina/Scentia/',dataset().tableName,'/',string(formatDateTime(utcnow(), 'yyyy')),'/',string(formatDateTime(utcnow(), 'MM')),'/',formatDateTime(utcnow(), 'dd')) ",
					"type": "Expression"
				},
				"fileSystem": "prelandingzone"
			}
		},
		"schema": {}
	},
	"type": "Microsoft.DataFactory/factories/datasets"
}